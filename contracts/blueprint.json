{
  "folders": {
    "src": {
      "controllers": "Handle API routes, invoke services",
      "services": "Business logic, interact with models",
      "models": "Data schemas",
      "utils": "Reusable functions"
    },
    "tests": {
      "unit": "Unit tests for utils/services",
      "integration": "End-to-end tests for flows"
    }
  },
  "naming_conventions": {
    "file_case": "camelCase",
    "folder_case": "kebab-case",
    "test_suffix": ".spec.ts"
  },
  "rules": {
    "utils": ["No database access", "Pure functions only"],
    "controllers": ["Do not contain business logic"]
  }
}
